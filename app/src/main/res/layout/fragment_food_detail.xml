<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.fragments.FoodDetailFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Food Detail" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="533dp"
            android:layout_margin="5dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainColor">

                <TextView
                    android:id="@+id/textViewFoodDetailTitle"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="@color/DetailFoodTitle"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewFoodDetail"
                    android:layout_width="0dp"
                    android:layout_height="313dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFoodDetailTitle" />


                <ImageView
                    android:id="@+id/buttonMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/minus"
                    app:layout_constraintEnd_toStartOf="@+id/textViewNumberOrder"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewFoodDetail" />

                <TextView
                    android:id="@+id/textViewNumberOrder"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/DetailFoodTitle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/buttonPlus"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/buttonMinus"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewFoodDetail" />

                <ImageView
                    android:id="@+id/buttonPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/plus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewNumberOrder"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewFoodDetail" />

                <TextView
                    android:id="@+id/textViewFoodDetailPriceIcon"
                    android:layout_width="45dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="â‚º"
                    android:textColor="@color/DetailFoodTitle"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewFoodDetailPrice"
                    app:layout_constraintTop_toTopOf="@+id/textViewFoodDetailPrice"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textViewFoodDetailPrice"
                    android:layout_width="69dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="15.99"
                    android:textColor="@color/DetailFoodCurrency"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textViewFoodDetailPriceIcon"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <Button
                    android:id="@+id/buttonAddToCart"
                    android:layout_width="186dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/text_input_edit_setup"
                    android:text="Add To Cart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.831"
                    app:layout_constraintStart_toEndOf="@+id/textViewFoodDetailPriceIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>